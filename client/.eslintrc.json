{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
				"plugin:tailwindcss/recommended",
        "standard"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
				"tailwindcss"
    ],
    "rules": {
			"tailwindcss/classnames-order": "warn",
			"tailwindcss/no-custom-classname": "warn",
			"tailwindcss/no-contradicting-classname": "error"
    }
}
